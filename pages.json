            "navigationStyle": "custom",
            "navigationBarTitleText": "callPhone"
          }
        },
        {
          "path": "unit",
          "name": "unit",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTitleText": "unit"
          }
        }
      ]
    }, {
      // 演示-组件
      "root": "pages/index/example/components",
      "pages": [{
        "path": "button",
        "name": "button",
        "style": {
          "navigationStyle": "custom",
          "navigationBarTitleText": "按钮"
        }
      }, {
        "path": "save-img",

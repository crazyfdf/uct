          "name": "deepClone",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTitleText": "deepClone"
          }
        },
        {
          "path": "timeFormat",
          "name": "timeFormat",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTitleText": "timeFormat"
          }
        },
        {
          "path": "route",
          "name": "route",
          "style": {
            "navigationStyle": "custom",
            "navigationBarTitleText": "route"
          }
        },
        {
          "path": "rule",
          "name": "rule",
          "style": {
